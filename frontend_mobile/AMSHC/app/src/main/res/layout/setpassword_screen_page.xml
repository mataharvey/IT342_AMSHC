<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="409dp"
    android:layout_height="800dp"
    android:background="#FFFFFF"
    android:clipToPadding="false"
    android:padding="30dp">

    <!-- Status Bar -->

    <!-- Time -->

    <!-- Signal Icons (Placeholders) -->

    <!-- Set Password Text -->

    <!-- Back Arrow (Placeholder) -->

    <!-- Description Text -->

    <TextView
        android:id="@+id/setPasswordText"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="53dp"
        android:gravity="center"
        android:text="Set Password"
        android:textColor="#2260FF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setPasswordText"
        android:layout_alignStart="@+id/setPasswordText"
        android:layout_alignEnd="@+id/setPasswordText"
        android:layout_marginStart="-33dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="-32dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        android:textColor="#070707"
        android:textSize="12sp" />

    <!-- Password Text -->
    <TextView
        android:id="@+id/passwordText"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="105dp"
        android:gravity="center_vertical"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Password Input -->
    <View
        android:id="@+id/passwordInput"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_below="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText"
        android:layout_alignEnd="@+id/passwordText"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-86dp"
        android:background="#ECF1FF"
        android:backgroundTint="#ECF1FF"
        android:backgroundTintMode="multiply" />

    <!-- Password Icon (Placeholder) -->

    <!-- Password Placeholder -->
    <TextView
        android:id="@+id/passwordPlaceholder"
        android:layout_width="133dp"
        android:layout_height="14dp"
        android:layout_alignStart="@+id/passwordInput"
        android:layout_alignTop="@+id/passwordInput"
        android:layout_alignEnd="@+id/passwordInput"
        android:layout_alignBottom="@+id/passwordInput"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:text="*************"
        android:textColor="#809CFF"
        android:textSize="20sp" />

    <!-- Confirm Password Text -->
    <TextView
        android:id="@+id/confirmPasswordText"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordInput"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="104dp"
        android:gravity="center_vertical"
        android:text="Confirm Password"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Confirm Password Input -->

    <!-- Confirm Password Icon (Placeholder) -->

    <!-- Confirm Password Placeholder -->
    <View
        android:id="@+id/confirmPasswordInput"
        android:layout_width="297dp"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/confirmPasswordText"
        android:layout_alignEnd="@+id/confirmPasswordText"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="-86dp"
        android:background="#ECF1FF"
        android:backgroundTint="#ECF1FF"
        android:backgroundTintMode="multiply" />

    <TextView
        android:id="@+id/confirmPasswordPlaceholder"
        android:layout_width="133dp"
        android:layout_height="14dp"
        android:layout_alignStart="@+id/confirmPasswordInput"
        android:layout_alignTop="@+id/confirmPasswordInput"
        android:layout_alignEnd="@+id/confirmPasswordInput"
        android:layout_alignBottom="@+id/confirmPasswordInput"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:text="*************"
        android:textColor="#809CFF"
        android:textSize="20sp" />

    <!-- Create New Password Button -->
    <View
        android:id="@+id/createNewPasswordButton"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:layout_below="@+id/confirmPasswordInput"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="33dp"
        android:background="#2260FF"
        android:backgroundTint="#2260FF"
        android:backgroundTintMode="multiply" />

    <!-- Create New Password Text -->
    <TextView
        android:id="@+id/createNewPasswordText"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/createNewPasswordButton"
        android:layout_alignTop="@+id/createNewPasswordButton"
        android:layout_alignEnd="@+id/createNewPasswordButton"
        android:layout_alignBottom="@+id/createNewPasswordButton"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="-7dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="Create New Password"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>